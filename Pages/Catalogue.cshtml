@page "/catalogue/{id:int?}"
@{/*The question mark makes the constraint optional*/}
@model CatalogueModel
@{
    ViewData["Title"] = "Katalog";
}

    <div class="text-center">
        <h1 class="display-4">Katalog</h1><br/>

        @{
            if(@Model.id == 0)
            {
                <a href="/catalogue/new">
                    <button type="button" class="btn btn-primary">Neues Produkt hinzufügen</button>
                </a>
            }
        }

    </div><br/>

    <div class="table-responsive">
    @{
        if(@Model.product != null)
        {
            <table class="table table-striped" style="table-layout: fixed;">
                <tbody>
                <tr>
                    <td>ID</td>
                    <td>@Model.product["productId"]</td>
                </tr>
                <tr>
                    <td>Titel</td>
                    <td>@Model.product["title"]</td>
                </tr>
                                <tr>
                    <td>Autor</td>
                    <td>@Model.product["author"]</td>
                </tr>
                                <tr>
                    <td>Land</td>
                    <td>@Model.product["country"]</td>
                </tr>
                                <tr>
                    <td>Link</td>
                    <td>@Model.product["link"]</td>
                </tr>
                <tr>
                    <td>Sprache</td>
                    <td>@Model.product["language"]</td>
                </tr>
                <tr>
                    <td>Seiten</td>
                    <td>@Model.product["pages"]</td>
                </tr>
                                <tr>
                    <td>Jahr</td>
                    <td>@Model.product["year"]</td>
                </tr>
                <tr>
                    <td>Kategorie</td>
                    <td>@Model.product["category"]</td>
                </tr>
                <tr>
                    <td>Bild</td>
                    <td><a href="/@Model.product["imageLink"]">Bild anzeigen</a></td>
                </tr>
                <tr>
                    <td>Ausleihzeit in Tagen</td>
                    <td>@Model.product["lendTime"]</td>
                </tr>
                <tr>
                    <td>Typ</td>
                    <td>@Model.product["lendType"]</td>
                </tr>
                <tr style="background-color: unset;">
                    <td style="text-align: center;"  colspan="2">
                        <a style="text-decoration: none" href="/catalogue/edit/@Model.product["productId"]">
                            <button type="button" class="btn btn-primary">Bearbeiten</button>
                        </a>
                        <a style="text-decoration: none" href="/catalogue/delete/@Model.product["productId"]">
                            <button type="button" class="btn btn-danger">Löschen</button>
                        </a>
                    </td>
                </tr>
                </tbody>
            </table>
        }
        else
        {
            foreach(var product in @Model.products)
            {
                <table class="table table-striped" style="margin-bottom: 5vh; table-layout: fixed;">
                    <tbody>
                    <tr>
                        <td>ID</td>
                        <td>@product["productId"]</td>
                    </tr>
                    <tr>
                        <td>Titel</td>
                        <td>@product["title"]</td>
                    </tr>
                    <tr>
                        <td>Kategorie</td>
                        <td>@product["category"]</td>
                    </tr>
                    <tr>
                        <td>Ausleihzeit in Tagen</td>
                        <td>@product["lendTime"]</td>
                    </tr>
                    <tr>
                        <td>Typ</td>
                        <td>@product["lendType"]</td>
                    </tr>
                    <tr>
                    <td style="text-align: center;" colspan="2">
                        <a style="text-decoration: none" href="/catalogue/@product["productId"]">
                            <button type="button" class="btn btn-primary">Details</button>
                        </a>
                        <a style="text-decoration: none" href="/catalogue/delete/@product["productId"]">
                            <button type="button" class="btn btn-danger">Löschen</button>
                        </a>
                    </td>
                </tr>
                    </tbody>
                </table>
            }
        }
    }</div>
